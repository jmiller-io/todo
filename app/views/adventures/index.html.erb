<h1>Listing Adventures</h1>

<%= link_to 'New Adventure', new_adventure_path %>

<table>
  <tr>
    <th>What</th>
    <th>Where</th>
    <th>When</th>
    <th>With</th>
  </tr>

  <% @adventures.each do |adventure| %>
    <tr>
      <td><%= adventure.what %></td>
      <td><%= adventure.where %></td>
      <td><%= adventure.when %></td>
      <td><%= adventure.with %></td>
      <td><%= link_to 'Show', adventure_path(adventure) %></td>
      <td><%= link_to 'Edit', edit_adventure_path(adventure) %></td>
      <td><%= link_to 'Destroy', adventure_path(adventure),
              method: :delete,
              data: { confirm: 'Are you sure?'} %></td>
    </tr>
    <% end %>
</table>
